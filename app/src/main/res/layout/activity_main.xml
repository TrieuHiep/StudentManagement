<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.studentmgmt.tatsuya.studentmanagement.MainActivity">

    <Spinner
            android:id="@+id/spinnerSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </Spinner>

    <Spinner
            android:id="@+id/spinnerMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/spinnerSV">
    </Spinner>

    <EditText
            android:id="@+id/txtDiemSV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerSV"/>

    <Button
            android:id="@+id/btnAddBD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDiemSV"
            android:text="ADD"
            android:layout_centerHorizontal="true"
    />

    <ListView
            android:id="@+id/listBD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btnAddBD"
    >

    </ListView>
</RelativeLayout>
